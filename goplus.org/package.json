  "private": true,
  "scripts": {
    "build:widgets": "cd widgets/global && tsc loader.ts --target es6 --lib es6,dom --skipLibCheck && cd ../.. && node widgets/build.js && rm widgets/global/loader.js",
    "dev:widgets": "NODE_ENV=development npm run build:widgets && rm -rf out && mkdir out && mkdir out/_next && cp -r .next/static out/_next && cp -r public/widgets out && cp widgets/dev.html out/index.html",
    "dev": "next dev",
    "build": "next build && npm run build:widgets",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "moveto": "^1.8.2",
    "next": "^15.4.6",
