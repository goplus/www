    "copy-text-to-clipboard": "^3.2.0",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-raw": "^7.0.0",
    "trim": ">=0.0.3"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
